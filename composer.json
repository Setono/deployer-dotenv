{
    "name": "setono/deployer-dotenv",
    "type": "library",
    "description": "Easily update your .env files when deploying",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.4",
        "deployer/deployer": "^6.8",
        "symfony/console": "^4.4 || ^5.0",
        "thecodingmachine/safe": "^1.2",
        "webmozart/assert": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "setono/code-quality-pack": "^1.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\Deployer\\DotEnv\\": "src/"
        },
        "files": [
            "src/autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\Deployer\\DotEnv\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "phpstan analyse -c phpstan.neon",
        "check-style": "ecs check --ansi src/ tests/",
        "fix-style": "ecs check --fix --ansi src/ tests/",
        "phpunit": "phpunit"
    }
}
